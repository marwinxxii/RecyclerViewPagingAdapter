<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a6v.pagingadapter.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.SamplesActivity"
            android:theme="@style/SamplesActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.DecoratorAdapterActivity"
            android:label="@string/activity_basic_label"
            android:screenOrientation="sensorPortrait" />

        <activity
            android:name=".activities.AdapterWithDelegateActivity"
            android:label="@string/activity_delegate_label"
            android:screenOrientation="sensorPortrait" />
    </application>
</manifest>
